// Place your settings in this file to overwrite the default settings
{
    // EDITOR
        // Insert snippets when their prefix matches. Works best when 'quickSuggestions' aren't enabled.
        "editor.tabCompletion": true,
        // Controls the font size.
        "editor.fontSize": 16,
        "editor.formatOnPaste": true,
        "editor.renderLineHighlight": "all",
        "editor.tabSize": 2,
        // Controls after how many characters the editor will wrap to the next line. Setting this to 0 turns on viewport width wrapping (word wrapping). Setting this to -1 forces the editor to never wrap.
        "editor.wrappingColumn": 100,
        // Zoom the font of the editor when using mouse wheel and holding Ctrl
        "editor.mouseWheelZoom": true,
    // GUIDES CONFIGURATIONS
        // Normal indentation guides rendering width.
        "guides.normal.width": 3,
        "guides.normal.color.dark": "rgba(60, 170, 200, 0.75)",
        // Active indentation guides rendering width.
        "guides.active.width": 3,
        // Show start-of-line indentation guides.
        "guides.indent.showFirstIndentGuides": false,
        // Hide normal indentation guides in selections.s
        "guides.normal.hideOnSelection": false,
    // WINDOW
        // Controls if a window should restore to full screen mode if it was exited in full screen mode.
        "window.restoreFullscreen": true,
        "window.zoomLevel": 1,
    // SEARCH
        "search.exclude": {
            "**/node_modules": true,
            "**/bower_components": true
        },
    // INTEGRATED TERMINAL
        "terminal.integrated.scrollback": 2000,
    // TODO PARSER
        "TodoParser": {
            "exclude": [
                "js",
                "css"
            ],
            "include": [
                "ts",
                "html",
                "scss"
            ],
            "folderExclude": [
                "node_modules",
                ".vscode"
            ],
            "only": [
                "src"
            ],
            "markers": [
                "NOTE:",
                "REMINDER:",
                "FIX:",
                "REFACTOR:"
            ]
        },
    // TSLINT
        "tslint.rulesDirectory": "./node_modules/codelyzer",
    // TYPESCRIPT
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.check.workspaceVersion": false,
    // VS ICONS
        "vsicons.dontShowNewVersionMessage": false,
        "vsicons.associations.files": [
            {
                "icon": "ng_routing_ts",
                "extensions": [
                    "routes.ts"
                ],
                "format": "svg"
            },
            {
                "icon": "ng_routing_js",
                "extensions": [
                    "routes.js"
                ],
                "format": "svg"
            },
            {
                "icon": "ng_module_custom_ts",
                "extensions": [
                    ""
                ],
                "format": "svg",
                "extends": "ng_module_ts"
            }
        ],
    // Set the languages that the extension will be activated.  e.g. ["html","xml","php"] By default, it is ["*"] and will be activated for all languages.
    "auto-rename-tag.activationOnLanguage": [
        "html"
    ],
    // TYPESCRIPT IMPORTER CONFIGURATION
        "tsimporter.filesToScan": [
            "node_modules/**/*.ts",
            "src/**/*.ts"
        ],
        "tsimporter.filesToExclude": [
            "src/**/*.spec.ts"
        ],
        "typescript.referencesCodeLens.enabled": true
      }
